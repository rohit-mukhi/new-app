<%- include('partials/header') %>
<nav class="navbar navbar-expand-lg bg-body-tertiary mb-4">
    </nav>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Supplier Dashboard</h2>
        <a href="/products/new" class="btn btn-primary">List New Item</a>
    </div>

    <h4>Sales Overview</h4>
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Total Revenue</h5>
                    <p class="card-text fs-4 fw-bold">₹<%= locals.totalRevenue || '0.00' %></p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Completed Orders</h5>
                    <p class="card-text fs-4 fw-bold"><%= locals.completedOrders || 0 %></p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Top Selling Item</h5>
                    <p class="card-text fs-4 fw-bold"><%= locals.topSellingItem || 'N/A' %></p>
                </div>
            </div>
        </div>
    </div>

    <h4>Your Active Listings</h4>
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td>₹<%= product.price %> / <%= product.unit %></td>
                    <td>
                        <% if (product.stock <= 5) { %>
                            <span class="badge bg-danger"><%= product.stock %> (Low)</span>
                        <% } else { %>
                            <span class="badge bg-success"><%= product.stock %></span>
                        <% } %>
                    </td>
                    <td>
                        <a href="/products/edit/<%= product._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/products/delete/<%= product._id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>