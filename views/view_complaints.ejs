<div class="container">
    <h2>Complaints Against You</h2>
    <%- include('partials/messages') %>

    <% if(complaints && complaints.length > 0) { %>
        <% complaints.forEach(complaint => { %>
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between">
                    <span>
                        <strong>Vendor:</strong> <%= complaint.vendor ? complaint.vendor.email : 'N/A' %>
                        (<small>Order: <%= complaint.order ? complaint.order._id : 'N/A' %></small>)
                    </span>
                    <span>
                        <strong>Status:</strong>
                        <% if (complaint.status === 'Resolved') { %>
                            <span class="badge bg-success"><%= complaint.status %></span>
                        <% } else if (complaint.status === 'Under Investigation') { %>
                            <span class="badge bg-warning text-dark"><%= complaint.status %></span>
                        <% } else { %>
                            <span class="badge bg-secondary"><%= complaint.status %></span>
                        <% } %>
                    </span>
                </div>
                <div class="card-body">
                    <p class="card-text"><strong>Reason Filed:</strong> <%= complaint.reason %></p>
                    
                    <% if (complaint.supplierNote) { %>
                        <p class="mt-3"><strong>Your Note:</strong> <em class="text-muted">"<%= complaint.supplierNote %>"</em></p>
                    <% } %>
                </div>
                <div class="card-footer">
                    <form action="/grievances/add-note/<%= complaint._id %>" method="POST">
                        <div class="input-group">
                            <input type="text" name="supplierNote" class="form-control" placeholder="Add a resolution note..." value="<%= complaint.supplierNote || '' %>">
                            <button class="btn btn-outline-primary" type="submit">Save Note</button>
                        </div>
                    </form>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <p class="text-center">No complaints have been filed against you.</p>
    <% } %>
</div>

<%- include('partials/footer') %>