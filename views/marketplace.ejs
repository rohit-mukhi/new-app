<%- include('partials/messages') %>

<h2>Available Produce in Your Community</h2>

<div class="row">
    <% if(products.length > 0) { %>
        <% products.forEach(product => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <h6 class="card-subtitle mb-2 text-muted">â‚¹<%= product.price %> / <%= product.unit %></h6>
                        <p class="card-text"><%= product.description %></p>
                        <p class="card-text"><small class="text-muted">Supplier: <%= product.supplier.email %></small></p>
                        <p class="card-text"><small class="text-muted">Tracking ID: <%= product.uniqueCode %></small></p>
                        <form action="/cart/add/<%= product._id %>" method="POST" class="d-grid">
                            <button type="submit" class="btn btn-success">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <p class="text-center">No produce is currently listed by suppliers in your locality. Check back soon!</p>
    <% } %>
</div>


