<%- include('partials/header') %>
<nav class="navbar navbar-expand-lg bg-body-tertiary mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="/marketplace">Marketplace</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" href="/community">My Community</a></li>
                <li class="nav-item"><a class="nav-link" href="/cart">My Cart</a></li>
                <li class="nav-item"><a class="nav-link" href="/orders/history">Order History</a></li>
                <li class="nav-item"><a class="nav-link active" href="/grievances/my-complaints">My Complaints</a></li>
            </ul>
            <span class="navbar-text me-3">Welcome, <%= user.email %></span>
            <a href="/profile" class="btn btn-outline-info me-2">Profile</a>
            <a href="/logout" class="btn btn-outline-danger">Logout</a>
        </div>
    </div>
</nav>

<div class="container">
    <div class="row">
        <% if(products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                         <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
    
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= product.name %></h5>
                            <h6 class="card-subtitle mb-2 text-muted">₹<%= product.price.toFixed(2) %> / <%= product.unit %></h6>
                            <p class="card-text"><%= product.description %></p>
                            
                            <div class="d-flex justify-content-between mt-auto">
                                <% if (product.supplier) { %>
                                    <p class="card-text mb-0"><small class="text-muted">Supplier: <%= product.supplier.email %></small></p>
                                    <p class="card-text mb-0">
                                        <small class="text-muted">
                                            ★ <%= (product.supplier.averageRating || 0).toFixed(1) %> 
                                            (<%= product.supplier.totalRatings || 0 %> ratings)
                                        </small>
                                    </p>
                                <% } else { %>
                                    <p class="card-text mb-0"><small class="text-muted">Supplier not available</small></p>
                                <% } %>
                            </div>
                            
                            <form action="/cart/add/<%= product._id %>" method="POST" class="d-grid mt-2">
                                <button type="submit" class="btn btn-success">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="text-center">No produce matches your search criteria in your community.</p>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>