<%- include('partials/header') %>
<nav class="navbar navbar-expand-lg bg-body-tertiary mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Admin Dashboard</a>
        <span class="navbar-text me-3">Logged in as: <%= user.email %></span>
        <a href="/logout" class="btn btn-outline-danger">Logout</a>
    </div>
</nav>

<div class="container">
    <h2>Manage Grievances</h2>
    <%- include('partials/messages') %>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Vendor</th>
                <th>Supplier</th>
                <th>Reason</th>
                <th>Filed On</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% grievances.forEach(g => { %>
                <tr>
                    <td><%= g.order._id %></td>
                    <td><%= g.vendor.email %></td>
                    <td><%= g.supplier.email %></td>
                    <td><%= g.reason %></td>
                    <td><%= new Date(g.createdAt).toLocaleDateString() %></td>
                    <td><%= g.status %></td>
                    <td>
                        <form action="/admin/grievances/update/<%= g._id %>" method="POST">
                            <div class="input-group">
                                <select name="status" class="form-select form-select-sm">
                                    <option value="Pending Review" <%= g.status === 'Pending Review' ? 'selected' : '' %>>Pending</option>
                                    <option value="Under Investigation" <%= g.status === 'Under Investigation' ? 'selected' : '' %>>Investigating</option>
                                    <option value="Resolved" <%= g.status === 'Resolved' ? 'selected' : '' %>>Resolved</option>
                                </select>
                                <button class="btn btn-sm btn-primary" type="submit">Update</button>
                            </div>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>